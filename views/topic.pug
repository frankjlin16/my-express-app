extends layout.pug 

block content 
  .mx-3
    .row 
      .col.align-self-start
      .col.align-self-center
        h1.text-center= topic
      .col.align-self-end.text-end
        a.btn.btn-primary(href="/new-entry") New Entry
  .card.m-3
    ul.list-group.list-group-flush
      each entry in entries
        - var entryId = entry._id;
        a.list-group-item.list-group-item-action(href="")= entry