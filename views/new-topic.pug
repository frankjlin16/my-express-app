extends layout.pug 

block content 
  h1.text-center New Topic
  .card.m-3
    .card-body
      form(action="/new-topic" method="post")
        .mb-3
          label.form-label(for="topicInput") Topic Name 
          input.form-control(type="text" id="topicInput" name="topic" placeholder="Untitied")
        button.btn.btn-primary(type="submit") Submit